<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    android:background="@drawable/bg_image_land"
    tools:context=".MainActivity">


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/result_semi"
        android:id="@+id/textViewSemi"
        android:textColor="@color/silver"

        android:layout_marginStart="63dp"
        android:layout_marginLeft="63dp"
        android:layout_alignParentTop="true"
        android:layout_toRightOf="@+id/eTxtQrt1"
        android:layout_toEndOf="@+id/eTxtQrt1" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/result_final"
        android:id="@+id/textView"
        android:textColor="@color/silver"
        android:layout_marginStart="61dp"
        android:layout_marginLeft="61dp"
        android:layout_alignParentTop="true"
        android:layout_toEndOf="@+id/textViewSemi"
        android:layout_toRightOf="@+id/textViewSemi"
        />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/eTxtQrt1"
        android:hint="@string/team1"
        android:gravity="center"
        android:background="@color/slate_gray"
        android:width="80dp"
        android:height="25dp"
        android:layout_marginBottom="10dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/eTxtQrt2"
        android:hint="@string/team2"
        android:gravity="center"
        android:background="@color/slate_gray"
        android:width="80dp"
        android:height="25dp"
        android:layout_below="@+id/eTxtQrt1"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/eTxtQrt3"
        android:hint="@string/team3"
        android:gravity="center"
        android:background="@color/slate_gray"
        android:width="80dp"
        android:height="25dp"
        android:layout_above="@+id/eTxtSemi2"
        android:layout_toLeftOf="@+id/textViewSemi"
        android:layout_toStartOf="@+id/textViewSemi" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/eTxtQrt4"
        android:hint="@string/team4"
        android:gravity="center"
        android:background="@color/slate_gray"
        android:width="80dp"
        android:height="25dp"
        android:layout_above="@+id/eTxtWinner"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/eTxtQrt5"
        android:hint="@string/team5"
        android:gravity="center"
        android:background="@color/slate_gray"
        android:width="80dp"
        android:height="25dp"
        android:layout_alignBaseline="@+id/eTxtSemi3"
        android:layout_alignBottom="@+id/eTxtSemi3"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/eTxtQrt6"
        android:hint="@string/team6"
        android:gravity="center"
        android:background="@color/slate_gray"
        android:width="80dp"
        android:height="25dp"
        android:layout_below="@+id/eTxtSemi3"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="16dp" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/eTxtQrt7"
        android:hint="@string/team7"
        android:gravity="center"
        android:background="@color/slate_gray"
        android:width="80dp"
        android:height="25dp"
        android:layout_above="@+id/eTxtQrt8"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="15dp" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/eTxtQrt8"
        android:hint="@string/team8"
        android:gravity="center"
        android:background="@color/slate_gray"
        android:width="80dp"
        android:height="25dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/eTxtSemi1"
        android:hint="@string/semi1"
        android:background="@drawable/shape_edtext"
        android:gravity="center"
        android:width="60dp"
        android:height="25dp"
        android:layout_alignTop="@+id/eTxtQrt2"
        android:layout_alignLeft="@+id/textViewSemi"
        android:layout_alignStart="@+id/textViewSemi" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/eTxtSemi2"
        android:hint="@string/semi2"
        android:background="@drawable/shape_edtext"
        android:gravity="center"
        android:width="60dp"
        android:height="25dp"
        android:layout_above="@+id/eTxtQrt4"
        android:layout_alignLeft="@+id/eTxtSemi1"
        android:layout_alignStart="@+id/eTxtSemi1" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/eTxtSemi3"
        android:hint="@string/semi3"
        android:background="@drawable/shape_edtext"
        android:gravity="center"
        android:width="60dp"
        android:height="25dp"
        android:layout_below="@+id/eTxtWinner"
        android:layout_alignLeft="@+id/eTxtSemi2"
        android:layout_alignStart="@+id/eTxtSemi2" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/eTxtSemi4"
        android:hint="@string/semi4"
        android:background="@drawable/shape_edtext"
        android:gravity="center"
        android:width="60dp"
        android:height="25dp"
        android:layout_alignTop="@+id/eTxtQrt7"
        android:layout_alignLeft="@+id/eTxtSemi3"
        android:layout_alignStart="@+id/eTxtSemi3" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/eTxtFinal1"
        android:hint="@string/final1"
        android:background="@drawable/shape_edtext"
        android:gravity="center"
        android:width="60dp"
        android:height="25dp"
        android:layout_below="@+id/eTxtSemi1"
        android:layout_alignLeft="@+id/textView"
        android:layout_alignStart="@+id/textView" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/eTxtFinal2"
        android:hint="@string/final2"
        android:background="@drawable/shape_edtext"
        android:gravity="center"
        android:width="60dp"
        android:height="25dp"
        android:layout_below="@+id/eTxtSemi3"
        android:layout_alignLeft="@+id/eTxtFinal1"
        android:layout_alignStart="@+id/eTxtFinal1" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/eTxtWinner"
        android:hint="@string/the_winner"
        android:background="@drawable/shape_edtext"
        android:gravity="center"
        android:width="60dp"
        android:height="25dp"
        android:layout_centerVertical="true"
        android:layout_toRightOf="@+id/eTxtFinal1"
        android:layout_toEndOf="@+id/eTxtFinal1"
        android:layout_marginLeft="30dp"
        android:layout_marginStart="30dp" />



    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/Winner"
        android:id="@+id/textView2"
        android:textColor="@color/gold"
        android:layout_alignParentTop="true"
        android:layout_alignLeft="@+id/eTxtWinner"
        android:layout_alignStart="@+id/eTxtWinner" />

    <ToggleButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/lucky_dip_toggle"
        android:id="@+id/toggleButton"
        android:textOn="CLEAR"
        android:textOff="LUCKY DIP"
        android:layout_alignTop="@+id/textView2"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />


</RelativeLayout>